# FarmForecast Development Environment Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control

# ============================================
# NEO4J AURA DATABASE
# ============================================
# Get these from: https://console.neo4j.io/
NEO4J_URI=neo4j+s://xxxxxxxx.databases.neo4j.io
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=your-neo4j-password-here
NEO4J_DATABASE=neo4j

# ============================================
# AWS CONFIGURATION
# ============================================
# Get these from: AWS IAM Console
AWS_ACCESS_KEY_ID=AKIAXXXXXXXXXXXXXXXXX
AWS_SECRET_ACCESS_KEY=your-aws-secret-key-here
AWS_REGION=us-west-2
AWS_ACCOUNT_ID=123456789012

# S3 Buckets (will be created if don't exist)
AWS_Sার_BUCKET_DATA=farmforecast-data-dev
AWS_S3_BUCKET_BACKUPS=farmforecast-backups-dev
AWS_S3_BUCKET_MEDIA=farmforecast-media-dev

# ============================================
# WEATHER API SERVICES
# ============================================
# Weather 20/20 API (Primary historical data)
WEATHER2020_API_KEY=your-weather2020-key-here
WEATHER2020_API_URL=https://api.weather2020.com/v1
WEATHER2020_ACCOUNT_ID=your-account-id

# Kansas Mesonet API (Real-time Kansas data)
MESONET_API_KEY=your-mesonet-key-here
MESONET_API_URL=https://mesonet.k-state.edu/api/v2
MESONET_STATION_IDS=Manhattan,Colby,Garden City

# OpenWeather API (Backup/supplemental)
OPENWEATHER_API_KEY=your-openweather-key-here
OPENWEATHER_API_URL=https://api.openweathermap.org/data/2.5

# NOAA API (Free tier for additional data)
NOAA_API_TOKEN=your-noaa-token-here
NOAA_API_URL=https://www.ncdc.noaa.gov/cdo-web/api/v2

# ============================================
# APPLICATION CONFIGURATION
# ============================================
NODE_ENV=development
PORT=3000
API_PORT=3001
FRONTEND_URL=http://localhost:3000
API_URL=http://localhost:3001

# Database connection pool
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Session/Security
SESSION_SECRET=generate-random-string-here
JWT_SECRET=another-random-string-here
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=10

# ============================================
# MONITORING & LOGGING
# ============================================
# Datadog (optional but recommended)
DATADOG_API_KEY=your-datadog-api-key
DATADOG_APP_KEY=your-datadog-app-key
DATADOG_SITE=datadoghq.com

# Sentry (error tracking)
SENTRY_DSN=https://xxxxxx@sentry.io/project-id
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0.1

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json
LOG_FILE_PATH=./logs/farmforecast.log

# ============================================
# THIRD PARTY INTEGRATIONS
# ============================================
# SendGrid (for email notifications)
SENDGRID_API_KEY=SG.xxxxxxxxxxxxxxxxxxxx
SENDGRID_FROM_EMAIL=noreply@farmforecast.com
SENDGRID_FROM_NAME=FarmForecast

# Twilio (for SMS alerts - optional)
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Stripe (future payment processing)
STRIPE_PUBLISHABLE_KEY=pk_test_xxxxxxxxxxxxx
STRIPE_SECRET_KEY=sk_test_xxxxxxxxxxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxx

# ============================================
# DEVELOPMENT TOOLS
# ============================================
# GitHub
GITHUB_TOKEN=ghp_xxxxxxxxxxxxxxxxxxxx
GITHUB_OWNER=AmericanAgrionics
GITHUB_REPO=FarmForecast

# Docker Registry (if using private registry)
DOCKER_REGISTRY_URL=docker.io
DOCKER_REGISTRY_USERNAME=your-username
DOCKER_REGISTRY_PASSWORD=your-password

# ============================================
# FEATURE FLAGS
# ============================================
ENABLE_WEATHER_SYNC=true
ENABLE_NEO4J_MIGRATIONS=true
ENABLE_API_RATE_LIMITING=true
ENABLE_CACHE=true
ENABLE_DEBUG_MODE=true

# ============================================
# CACHE CONFIGURATION
# ============================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
CACHE_TTL_SECONDS=3600

# ============================================
# FARM-SPECIFIC TEST DATA
# ============================================
# Default test farm coordinates (Manhattan, KS area)
TEST_FARM_NAME=Development Farm
TEST_FARM_LAT=39.1836
TEST_FARM_LON=-96.5717
TEST_FARM_ACRES=160
TEST_FARM_ZIP=66502

# ============================================
# EXTERNAL VERIFICATION ENDPOINTS
# ============================================
# Health check URLs for prerequisite verification
NEO4J_HEALTH_CHECK_ENABLED=true
AWS_HEALTH_CHECK_ENABLED=true
WEATHER_API_HEALTH_CHECK_ENABLED=true